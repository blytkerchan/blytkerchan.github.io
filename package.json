{
  "name": "phoenix.ui",
  "version": "1.1.0",
  "private": true,
  "dependencies": {
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "i18next": "^23.11.2",
    "i18next-browser-languagedetector": "^7.2.1",
    "i18next-http-backend": "^2.5.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.2",
    "react-dom": "^18.2.0",
    "react-embed-gist": "github:blytkerchan/react-embed-gist#090b081f1e7986f9b6f421e0ee2bff9e25ab3708",
    "react-hooks-global-state": "^2.1.0",
    "react-i18next": "^14.1.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.22.3",
    "rehype-katex": "^7.0.0",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.0",
    "remark-images": "^4.0.0",
    "remark-math": "^6.0.0",
    "remove-markdown": "^0.5.0"
  },
  "scripts": {
    "build": "NODE_ENV=production node scripts/build.js",
    "i18n": "node node_modules/i18next",
    "lint": "NODE_ENV=development eslint -f compact src/**/*.js",
    "serve": "BROWSER=none node scripts/start.js",
    "start": "node scripts/start.js",
    "test": "node scripts/test.js --coverage"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn"
    }
  },
  "prettier": {
    "printWidth": 120
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.583.0",
    "@babel/core": "^7.24.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@silvermine/serverless-plugin-cloudfront-lambda-edge": "2.2.3",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^15.0.2",
    "@testing-library/user-event": "^14.5.2",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "babel-plugin-named-asset-import": "^0.3.8",
    "babel-preset-react-app": "^10.0.1",
    "bfj": "^8.0.0",
    "browserslist": "^4.23.0",
    "camelcase": "^8.0.0",
    "case-sensitive-paths-webpack-plugin": "^2.4.0",
    "cors": "^2.8.5",
    "css-loader": "^7.1.1",
    "css-minimizer-webpack-plugin": "^6.0.0",
    "depromisify": "^1.0.0",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "eslint": "^8.57.0",
    "eslint-config-react-app": "^7.0.1",
    "express": "^4.19.2",
    "file-loader": "^6.2.0",
    "front-matter": "^4.0.2",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.12",
    "globby": "^14.0.1",
    "html-webpack-plugin": "^5.6.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-resolve": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "marked": "^12.0.2",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.38",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^8.1.1",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^9.5.5",
    "prompts": "^2.4.2",
    "react-app-polyfill": "^3.0.0",
    "react-dev-utils": "^12.0.1",
    "react-refresh": "^0.14.0",
    "resolve": "^1.22.8",
    "resolve-url-loader": "^5.0.0",
    "sass-loader": "^14.2.1",
    "semver": "^7.6.0",
    "serverless-s3-sync": "^3.3.0",
    "source-map-loader": "^5.0.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.3",
    "terser-webpack-plugin": "^5.3.10",
    "web-vitals": "^3.5.2",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4",
    "webpack-manifest-plugin": "^5.0.0",
    "workbox-webpack-plugin": "^7.0.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/src/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/config/jest/babelTransform.js",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|mjs|cjs|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [],
    "modulePaths": [],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "overrides": {
    "webpack-dev-server": "^5.0.4"
  },
  "blog": {
    "title": "Making Life Easier",
    "subtitle": "Blog about software engineering, and how it makes life easier",
    "baseUrl": "https://rlc.vlinder.ca",
    "useHashRouting": false,
    "pageSize": 10,
    "defaultThumbnailImage": "/logo.svg"
  }
}
